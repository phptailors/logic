{
  "name": "phptailors/logic",
  "description": "First-order logic",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/phptailors/predicate/issues",
    "source": "https://github.com/phptailors/predicate"
  },
  "authors": [
    {
      "name": "Pawe≈Ç Tomulik",
      "email": "pawel@tomulik.pl"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-pcre": "*"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "phptailors/phpunit-inheritance": "^3",
    "phpunit/phpunit": "^11.0.1",
    "psalm/plugin-phpunit": "^0.19.0",
    "vimeo/psalm": "^6.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Tailors\\Logic\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tailors\\Logic\\": "tests/src/",
      "Tailors\\Logic\\Docs\\Behat\\": "docs/sphinx/behat/"
    }
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": false,
      "target-directory": "vendor-bin"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "bin-dir": "./bin"
  }
}
